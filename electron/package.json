{
  "name": "hub-desktop",
  "version": "1.0.0",
  "description": "HUB Desktop - Unified Workspace. One login for all your business apps.",
  "main": "main.js",
  "author": "HUB",
  "license": "MIT",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder --publish never"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.hub.desktop",
    "productName": "HUB Desktop",
    "artifactName": "HUB-Desktop-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "icon.png"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.png",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.png",
      "category": "Office"
    }
  }
}
